<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <bean id="javaEnvironmentInstanceFactory" class="org.smallmind.cloud.namespace.java.pool.PooledJavaContextComponentInstanceFactory">
    <constructor-arg index="0" value="LDAP"/>
    <constructor-arg index="1" value="${java.context.env}"/>
    <constructor-arg index="2" value="${ldap.host}"/>
    <constructor-arg index="3" value="${ldap.port}"/>
    <constructor-arg index="4" value="${ldap.base.dn}"/>
    <constructor-arg index="5" value="${ldap.auth.dn}"/>
    <constructor-arg index="6" value="${ldap.auth.password}"/>
  </bean>

  <bean id="javaEnvironmentPool" class="org.smallmind.quorum.pool.complex.ComponentPool">
    <constructor-arg index="0" value="javaEnvironmentPool"/>
    <constructor-arg index="1" ref="javaEnvironmentInstanceFactory"/>
    <property name="poolMode" value="BLOCKING_POOL"/>
    <property name="acquireRetryDelayMillis" value="300"/>
    <property name="acquireRetryAttempts" value="3"/>
    <property name="minPoolSize" value="${java.context.env.pool.size.min}"/>
    <property name="maxPoolSize" value="${java.context.env.pool.size.max}"/>
    <property name="maxLeaseTimeSeconds" value="1800"/>
    <property name="connectionTimeoutMillis" value="500"/>
    <property name="testOnAcquire" value="true"/>
  </bean>

</beans>