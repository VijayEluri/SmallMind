<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

  <import resource="classpath:org/smallmind/foundation/logging.xml"/>

  <bean class="org.smallmind.nutsnbolts.spring.SystemPropertyInitializingBean">
    <property name="order" value="1"/>
    <property name="propertyMap">
      <map>
        <entry key="SMALLMIND_ENVIRONMENT" value="de"/>
        <entry key="SMALLMIND_DATABASE" value="mysql"/>
        <entry key="SMALLMIND_MODULE" value="foundation"/>
        <entry key="SMALLMIND_PRODUCT" value="any"/>
      </map>
    </property>
  </bean>

  <bean id="allProperties" class="org.smallmind.nutsnbolts.spring.PropertyPlaceholderConfigurer">
    <property name="order" value="2"/>
    <property name="ignoreResourceNotFound" value="true"/>
    <property name="ignoreUnresolvableProperties" value="false"/>
    <property name="systemPropertyMode" value="OVERRIDE"/>
    <property name="searchSystemEnvironment" value="true"/>
    <property name="locations">
      <list>
        <value>classpath:com/smallmind/foundation/global.properties</value>
        <value>classpath:com/smallmind/foundation/database-${SMALLMIND_DATABASE}.properties</value>
        <value>classpath:com/smallmind/foundation/${SMALLMIND_ENVIRONMENT}/environment.properties</value>
        <value>classpath:com/smallmind/foundation/${SMALLMIND_ENVIRONMENT}/database-${SMALLMIND_DATABASE}.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/application.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/database-${SMALLMIND_DATABASE}.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_ENVIRONMENT}/application.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_ENVIRONMENT}/database-${SMALLMIND_DATABASE}.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_PRODUCT}/application.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_PRODUCT}/database-${SMALLMIND_DATABASE}.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_PRODUCT}/${SMALLMIND_ENVIRONMENT}/application.properties</value>
        <value>classpath:com/smallmind/${SMALLMIND_MODULE}/${SMALLMIND_PRODUCT}/${SMALLMIND_ENVIRONMENT}/database-${SMALLMIND_DATABASE}.properties</value>
        <value>file:${user.home}/.m2/local.properties</value>
        <value>file:${user.home}/.m2/database-${SMALLMIND_DATABASE}.properties</value>
      </list>
    </property>
  </bean>

</beans>