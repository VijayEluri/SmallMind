<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

   <build>
      <plugins>
         <plugin>
            <groupId>org.smallmind.spark</groupId>
            <artifactId>spark-wrapper-mojo</artifactId>
            <executions>
               <execution>
                  <goals>
                     <goal>generate-os-wrapper</goal>
                  </goals>
               </execution>
            </executions>
            <configuration>
               <licenseFile>user home/.m2/wrapper-license.conf</licenseFile>
               <operatingSystem>os constant</operatingSystem>
               <wrapperListener>org.smallmind.spark.wrapper.integration.spring.ClassPathXmlSpringContextWrapperListener</wrapperListener>
               <javaCommand>java.exe</javaCommand>
               <jvmInitMemoryMB>64</jvmInitMemoryMB>
               <jvmMaxMemoryMB>256</jvmMaxMemoryMB>
               <appParameters>
                  <appParameter>com/mydomain/spring1.xml</appParameter>
                  <appParameter>com/mydoain/spring2.xml</appParameter>
               </appParameters>
               <jvmArgs>
                  <jvmArg>-server</jvmArg>
                  <jvmArg>-Dtc.config=../conf/tc-config.xml</jvmArg>
               </jvmArgs>
               <configurations>
                  <configuration>${project.build.directory}/classes/tc-config.xml</configuration>
               </configurations>
            </configuration>
         </plugin>

         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-install-plugin</artifactId>
            <executions>
               <execution>
                  <phase>install</phase>
                  <goals>
                     <goal>install-file</goal>
                  </goals>
                  <configuration>
                     <packaging>jar</packaging>
                     <artifactId>${project.artifactId}</artifactId>
                     <groupId>${project.groupId}</groupId>
                     <version>${project.version}</version>
                     <classifier>app</classifier>
                     <file>${project.build.directory}/application/${project.artifactId}-${project.version}-app.jar</file>
                  </configuration>
               </execution>
            </executions>
         </plugin>

         <plugin>
            <groupId>org.apache.maven.plugins</groupId>
            <artifactId>maven-deploy-plugin</artifactId>
            <executions>
               <execution>
                  <phase>deploy</phase>
                  <goals>
                     <goal>deploy-file</goal>
                  </goals>
                  <configuration>
                     <packaging>jar</packaging>
                     <artifactId>${project.artifactId}</artifactId>
                     <groupId>${project.groupId}</groupId>
                     <version>${project.version}</version>
                     <classifier>app</classifier>
                     <file>${project.build.directory}/application/${project.artifactId}-${project.version}-app.jar</file>
                     <repositoryId>${nexus.release.repository.id}</repositoryId>
                     <url>${nexus.release.repository.url}</url>
                  </configuration>
               </execution>
            </executions>
         </plugin>
      </plugins>
   </build>

</project>
