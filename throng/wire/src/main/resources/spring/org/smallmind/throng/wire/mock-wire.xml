<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans" xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

  <bean id="mockMessageRouter" class="org.smallmind.throng.wire.mock.MockMessageRouter"/>

  <bean id="jsonSignalCodec" class="org.smallmind.throng.wire.JsonSignalCodec"/>

  <bean id="mockRequestTransport" class="org.smallmind.throng.wire.mock.MockRequestTransport">
    <constructor-arg index="0" name="messageRouter" ref="mockMessageRouter"/>
    <constructor-arg index="1" name="signalCodec" ref="jsonSignalCodec"/>
    <constructor-arg index="2" name="timeoutSeconds" value="${wire.timeout_seconds}"/>
  </bean>

  <bean id="mockResponseTransport" class="org.smallmind.throng.wire.mock.MockResponseTransport">
    <constructor-arg index="0" name="messageRouter" ref="mockMessageRouter"/>
    <constructor-arg index="1" name="signalCodec" ref="jsonSignalCodec"/>
  </bean>

</beans>